@model SWZOS.Models.Admin.GlobalViewModel

<div class="container">
    <form class="form-horizontal" id="EditGlobalValueForm" asp-action="EditValue">
        <div class="row align-items-center">
            <div class="col-12">
                <input class="form-control" type="text" asp-for="Key" hidden />
                <div class="form-group">
                    <label class="form-label" asp-for="Key">Klucz</label>
                    <input class="form-control" type="text" value="@Model.Key" disabled />
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Value">Wartość:</label>
                    <textarea class="form-control" asp-for="Value" required></textarea>
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description">Opis:</label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <input id="SubmitEditValueForm" type="submit" value="Zapisz" />
        </div>
    </form>
</div>