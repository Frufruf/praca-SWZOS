@model SWZOS.Models.User.UserFormModel
<script>
    let UserFormUrl = {
        AddUserUrl: "@Url.Action("AddUser", "Users")",
        EditUserUrl: "@Url.Action("EditUser", "Users")",
        DeleteUserUrl: "@Url.Action("DeleteUser", "Users")"
    }

    let isEditForm = "@Model.IsEditForm";
</script>
<div>
    <form id="UserForm">
        <div class="row">
            @if (Model.IsEditForm)
            {
                <input hidden disabled asp-for="Id"/>
            }
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Login">Login:</label>
                    <input type="text" id="Login" name="Login" asp-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Name">Imię:</label>
                    <input type="text" id="Name" name="Name" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="MailAddress">Email:</label>
                    <input type="text" id="MailAddress" name="MailAddress" asp-for="MailAddress" />
                </div>
                <div class="form-group">
                    <label asp-for="PESEL">PESEL:</label>
                    <input type="text" id="PESEL" name="PESEL" asp-for="PESEL" />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Password">Hasło:</label>
                    <input type="password" id="Password" name="Password" asp-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Nazwisko:</label>
                    <input type="text" id="Surname" name="Surname" asp-for="Surname" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Numer telefonu:</label>
                    <input type="text" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" />
                </div>
            </div>
            <input id="SubmitUserForm" type="button" value="Zapisz"/>
        </div>
    </form>
</div>
<script src="~/js/Users/UserForm.js"></script>