@model SWZOS.Models.User.UserViewModel
<script>
    let UserUrl = {
        EditReservation: "@Url.Action("EditReservation", "Reservations")"
    }
</script>
<div>
    <div class="align-items-center">
        <div class="row">
            <div class="col-3">
                <h5>Login: @Model.Login</h5>
            </div>
            <div class="col-3">
                <h5>Imię i nazwisko: @Model.FullName</h5>
            </div>
            <div class="col-3">
                <h5>Numer telefonu: @Model.PhoneNumber</h5>
            </div>
            <div class="col-3">
                <h5>Adres email: @Model.MailAddress</h5>
            </div>
        </div>
    </div>
    <table id="userReservationsTable" border="1" cellpadding="5" cellspacing="5" width="100%">
        <thead>
            <tr>
                <th>ID boiska</th>
                <th>Rodzaj boiska</th>
                <th>Czas rozpoczęcia</th>
                <th>Czas zakończenia</th>
                <th>Kwota należnego</th>
                <th>Opis</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model.Reservations)
            {
                <tr>
                    <td>@element.PitchId</td>
                    <td>@element.PitchTypeName</td>
                    <td>@element.StartDate</td>
                    <td>@element.EndDate</td>
                    <td>@element.Price</td>
                    <td>@element.Description</td>
                    <td>@if (element.StartDate > DateTime.Now) { <text><button class="btn btn-primary" onclick="EditReservation(@element.ReservationId)">Szczegóły</button></text>}</td>
                </tr>
            }
        </tbody>
    </table>
    <table id="userPaymentsTable" border="1" cellpadding="5" cellspacing="5" width="100%">
        <thead>
            <tr>
                <th>ID rezerwacji</th>
                <th>Pełna kwota</th>
                <th>Kwota zaliczki</th>
                <th>Wpłacono</th>
                <th>Status</th>
                <th>Opis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model.Reservations)
            {
                <tr>
                    <td>@element.ReservationId</td>
                    <td>@element.Payments.FullFee</td>
                    <td>@element.Payments.AdvancePayment</td>
                    <td>@element.Payments.PaidInAmmount</td>
                    <td>@element.Payments.StatusId</td>
                    <td>@element.Payments.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
