@model SWZOS.Models.Reservations.ReservationFormModel

<div class="container">
    <form class="form-horizontal" id="AddReservationForm" asp-action="AddReservation">
        <div class="row align-items-center">
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label" asp-for="PitchTypeId">Boisko</label>
                    <input class="form-control" type="text" asp-for="PitchTypeId" required/>
                    <span class="text-danger" asp-validation-for="PitchTypeId"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Duration">Czas rezerwacji</label>
                    <input class="form-control" type="email" asp-for="Duration" required/>    
                    <span class="text-danger" asp-validation-for="Duration"></span>               
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description">Dodatkowe uwagi</label>
                    <input class="form-control" type="password" asp-for="Description" required/>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" asp-for="StartDate" hidden/>
                </div>
            </div>
            <input id="SubmitReservationForm" type="submit" value="Zapisz"/>
        </div>
    </form>
</div>