@model SWZOS.Models.Equipment.EquipmentFormModel

<div class="container">
    <form class="form-horizontal" id="AddEquipmentForm" asp-action="Add">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="form-group">
                    <label class="form-label" asp-for="Name">Nazwa sprzętu:</label>
                    <input class="form-control" type="text" asp-for="Name" required/>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Quantity">Ilość:</label>
                    <input class="form-control" type="number" asp-for="Quantity" required/>
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Description">Opis:</label>
                    <input class="form-control" type="text" asp-for="Description"/>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Price">Cena za godzinę wypożyczenia:</label>
                    <input class="form-control" type="number" asp-for="Price" required/>
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="MaximumQuantityPerReservation">Maksymalna ilość dostępna na rezerwację:</label>
                    <input class="form-control" type="number" asp-for="MaximumQuantityPerReservation" required/>
                    <span class="text-danger" asp-validation-for="MaximumQuantityPerReservation"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="PitchTypeIds">Dostępne na:</label>
                    <select class="custom-select" asp-for="PitchTypeIds" multiple>
                        <option value="1">Boisko piłkarskie</option>
                        <option value="2">Kort tenisowy</option>
                        <option value="3">Boisko do koszykówki</option>
                        <option value="4">Boisko do siatkówki</option>
                    </select>
                    <span class="text-danger" asp-validation-for="PitchTypeIds"></span>
                </div>
            </div>
            <input id="SubmitAddEquipmentForm" type="submit" value="Zapisz"/>
        </div>
    </form>
</div>